@model WebUI.Models.Entities.Event

@{
    ViewBag.Title = "Organization Event";
}

@section head {
    <script src="http://maps.google.com/maps/api/js?sensor=true" type="text/javascript"></script>
    @Styles.Render("~/Content/GoogleMap.css")    
}

<div class="page-header">
    <h2>Organization Event</h2>
</div>

<div class="well">        
    @using (Html.BeginForm())
    {           
        @Html.ValidationSummary(false)
        
        <div class="form-horizontal">
            <div class="form-group">
                @Html.LabelFor(model => model.Title, new { @class = "col-sm-2 control-label"})
                <div class="col-sm-10">
                    @Html.TextBoxFor(model => model.Title, new { @class = "form-control", placeholder = "Title"})
                    @Html.ValidationMessageFor(model => model.Title)
                </div>
            </div>            
            <div class="form-group">
                @Html.LabelFor(model => model.Address, new { @class = "col-sm-2 control-label" })
                <div class="col-sm-10">
                    @Html.TextBoxFor(model => model.Address, new { @class = "form-control"})
                    @Html.HiddenFor(model => model.Latitude)
                    @Html.HiddenFor(model => model.Longitude)
                    <div id="map_canvas"></div>
                </div>
            </div>    
            <div class="form-group">
                <label class = "col-sm-2 control-label">Tags</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="eventTags" name="eventTags" placeholder="FirstTag SecondTag">
                </div>
            </div>            
            <div class="form-group">
                @Html.LabelFor(model => model.DatetimeOfStart, new { @class = "col-sm-2 control-label" })
                <div class="col-sm-10">
                    @Html.TextBoxFor(model => model.DatetimeOfStart, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.DatetimeOfStart)                    
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Duration, new { @class = "col-sm-2 control-label" })
                <div class="col-sm-10">
                    @Html.TextBoxFor(model => model.Duration, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Duration)
                </div>
            </div>
            
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    @Html.ActionLink("Back", "OrganizedEvents", new { }, new { @class = "btn btn-primary" })
                    <button type="submit" class="btn btn-success">Submit</button>
                </div>
            </div>
        </div>
    }
</div>

@section scripts {
    @Scripts.Render("~/Scripts/googleMap.js")
    @Scripts.Render("~/bundles/jqueryval")
}    