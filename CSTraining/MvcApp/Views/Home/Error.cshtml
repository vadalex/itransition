@model System.Web.Mvc.HandleErrorInfo
@{
    ViewBag.Title = "Error";
}
<div>
    <h1>Whoops!</h1>
    <div>
        <p>
            An unexpected error has occurred. Our IT team has been notified and will look into the problem as soon as possible.
        </p>
        <p>If you like you can go <a href="javascript: void history.back();">back</a> and retry what you were doing.  If the error keeps happening please @Html.ActionLink("contact us", "Contact") and we'll try our best to help.</p>
    </div>
    <hr />
    <fieldset>
        <ol>  
            <li>
                <p>
                    <label>
                        Exception type
                    </label>
                    @Model.Exception.GetType().ToString()
                </p>
            </li>
            <li>
                <p>
                    <label>
                        Message
                    </label>
                    @Model.Exception.Message
                </p>
            </li>
            <li>
                <p>
                    <label>
                        Stack trace
                    </label>
                    <div>
                        @Model.Exception.StackTrace
                    </div>
                </p>
            </li>
        </ol>
    </fieldset>
</div>