@{
    ViewBag.Title = "Backbone Todo List";
}

@section head
{
    @Styles.Render("~/content/todoliststyle")
    @Scripts.Render("~/scripts/jquery")
}

<div id="content">
    <h2>Backbone Todo List</h2>

    <div class="todo-wrapper">
        <div id="todo-header"></div>
        <ul id="todo-list">
        </ul>
        <div>
            <input class="add-input" placeholder="I need to..." type="text" id="formTodoText" />
            <button class="add-btn"><h2>Add</h2></button>
        </div>
    </div>
</div>

<script type="text/template" id="todoItemTemplate">    
        <input class="toggle" type="checkbox" <%= IsDone ? 'checked="checked"' : '' %> />
        <span class="done-<%= IsDone %>"><%= TodoText %></span>
        <button class="remove-btn">Remove</button>    
</script>

<script type="text/template" id="todoHeaderTemplate">
    <h2>You've got <span class="emphasis"><%= remaining %></span> things to do</h2>
</script>

@section scripts
{
    @Scripts.Render("~/scripts/backbone")
    <script type="text/javascript">
        $(document).ready(function () {
            todoApp.init();
        });
    </script>
}


