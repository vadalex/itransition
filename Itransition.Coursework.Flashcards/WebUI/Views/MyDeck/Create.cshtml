@model Entities.Deck

@{
    ViewBag.Title = "Create";
}

<div>
    <h2>hello</h2>
    <p><h2>Create deck</h2></p>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary()

        <div class="form-horizontal">
            <div class="form-group">
                @Html.LabelFor(model => model.Title, new { @class = "col-sm-2 control-label" })
                <div class="col-sm-10">
                    @Html.EditorFor(model => model.Title)
                    @Html.ValidationMessageFor(model => model.Title)
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <div class="checkbox">
                        <label>
                            @Html.CheckBoxFor(model => model.IsShared) is shared?
                        </label>
                    </div>
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Description, new { @class = "col-sm-2 control-label" })
                <div class="col-sm-10">
                    @Html.TextAreaFor(model => model.Description, new { @class="form-control", rows="3" })  
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    @Html.ActionLink("Back", "Index", new { }, new { @class = "btn btn-primary" })
                    <button type="submit" class="btn btn-success">Create</button>
                </div>
            </div>
        </div>
    }    
    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
</div>