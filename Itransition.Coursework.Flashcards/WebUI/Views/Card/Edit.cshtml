@model Entities.Card

@{
    ViewBag.Title = "Edit";
}

<div>
    <h2>hello</h2>
    <p><h2>Edit card</h2></p>
    @using (Html.BeginForm("Edit", "Card", FormMethod.Post, new {enctype="multipart/form-data"}))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(false)

        <div class="form-horizontal">
            @Html.HiddenFor(model => model.CardID)
            @Html.HiddenFor(model => model.DeckID)
            @Html.HiddenFor(model => model.Number)
            @Html.HiddenFor(model => model.AnswerImageLink)
            @Html.HiddenFor(model => model.QuestionImageLink)
            <div class="form-group">
                @Html.LabelFor(model => model.Question, new { @class = "col-sm-2 control-label" })
                <div class="col-sm-10">
                    @Html.EditorFor(model => model.Question)
                    @Html.ValidationMessageFor(model => model.Question)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.QuestionSubTitle, new { @class = "col-sm-2 control-label" })
                <div class="col-sm-10">
                    @Html.EditorFor(model => model.QuestionSubTitle)
                    @Html.ValidationMessageFor(model => model.QuestionSubTitle)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.QuestionImageLink, new { @class = "col-sm-2 control-label" })
                <div class="col-sm-10">
                    @if(@Model.QuestionImageLink != null)
                    { 
                        <img src="@Model.QuestionImageLink" alt="there is not image" class="img-thumbnail" height="150" width="180">                    
                        <div class="checkbox">
                            <label>
                                @Html.CheckBox("deleteQuestionImage", false) delete this image?                                
                            </label>
                        </div>
                    }
                    else
                    {
                        <label>There is not image in this card</label>
                    }
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.QuestionImageLink, new { @class = "col-sm-2 control-label" })
                <div class="col-sm-10">                    
                    <input type="file" name="questionImage" id="questionImage" />
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Answer, new { @class = "col-sm-2 control-label" })
                <div class="col-sm-10">
                    @Html.EditorFor(model => model.Answer)
                    @Html.ValidationMessageFor(model => model.Answer)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.AnswerSubTitle, new { @class = "col-sm-2 control-label" })
                <div class="col-sm-10">
                    @Html.EditorFor(model => model.AnswerSubTitle)
                    @Html.ValidationMessageFor(model => model.AnswerSubTitle)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.AnswerImageLink, new { @class = "col-sm-2 control-label" })
                <div class="col-sm-10">
                    @if (@Model.AnswerImageLink != null)
                    {
                        <img src="@Model.AnswerImageLink" alt="there is not image" class="img-thumbnail" height="150" width="150">
                        <div class="checkbox">
                            <label>
                                @Html.CheckBox("deleteAnswerImage", false) delete this image?                                
                            </label>
                        </div>
                    }
                    else
                    {
                        <label>There is not image in this card</label>
                    }
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.AnswerImageLink, new { @class = "col-sm-2 control-label" })
                <div class="col-sm-10">                    
                    <input type="file" name="answerImage" id="answerImage" />
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    @Html.ActionLink("Back", "Details", "MyDeck", new { deckId = @Model.DeckID }, new { @class = "btn btn-primary" })
                    <button type="submit" class="btn btn-success">Update</button>
                </div>
            </div>
        </div>
    }
    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
</div>