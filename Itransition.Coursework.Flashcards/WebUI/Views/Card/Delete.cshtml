@model Entities.Card

@{
    ViewBag.Title = "Delete";
}

<div class="jumbotron">
    <p><h2>Are you sure you want to delete this card?</h2></p>
    @Html.Partial("FlashCardPartial", Model)
    
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <p>
            <input type="submit" value="Remove" class="btn btn-danger" />
            @Html.ActionLink("Back", "Details", "MyDeck", new { deckId = @Model.DeckID}, new { @class = "btn btn-primary" })
        </p>
    }
</div>

